    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Visitor Management</title>
    <link rel="stylesheet" href="static/css/style.css" />
</head>

<body id="" class="container">
    <h1 id="" class="at-center pink">VISITOR MANAGEMENT</h1>
    {{msg}} {{sms}} {{mail}}
    <form class="page-container" id="">
        <h2 id="" class="at-center">ENTER YOUR DETAILS</h2>
        <div id="" class="visitor-container">
            <div id="" class="visitor-field"><input type="text" id="visitor-name" class="input-box" name="visitorName"
                    placeholder="Full name" required /></div>
            <div id="" class="visitor-field"><input type="tel" name="visitorPhone" id="visitor-phone" class="input-box"
                    placeholder="Phone Number" required /></div>
            <div id="" class="visitor-field"><input type="email" name="visitorEmail" id="visitor-email"
                    class="input-box" placeholder="Email Address" required /></div>
        </div>
        <h2 id="" class="at-center">SELECT HOST</h2>
        <div id="host-container" class="host-container"></div>
        <div class="button-container" id="">
            <button id="checkin" class="button">CHECK IN</button>
            <button id="checkout" class="button" type="reset">CHECK OUT</button>
        </div>
    </form>
    <script src="static/js/script.js"></script>
</body>

</html>